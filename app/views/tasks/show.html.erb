<div id="jobs">
	<div class="job">
		<h1><%=@task.title%></h1>
		<p><%=@task.description%></p>
		<p><%=@task.company%></p>
		<%= link_to "Go", "http://#{@task.url}", class: "btn-primary btn" %>
	</div>
</div>

<div id="links">
	<%= link_to "Home", root_path, class: "btn-default btn-sm btn" %>
	<%= link_to "Edit", edit_task_path(@task), class: "btn-default btn-sm btn" %>
	<%= link_to "Delete", task_path(@task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-default btn-sm btn" %>
</div>