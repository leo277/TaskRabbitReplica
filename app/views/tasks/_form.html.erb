<%= simple_form_for @task, {class: 'form-horizontal'} do |f| %>
	<%=f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a category" }, { class: "dropdown-toggle" } %>
	<%=f.input :title, label: "Task Title", input_html: { class: "form-control"}  %>
	<%=f.input :description, label: "Task Description", input_html: { class: "form-control" } %>
	<%=f.input :company, label: "Company", input_html: { class: "form-control" } %>
	<%=f.input :url, label: "Task Url", input_html: { class: "form-control" } %>
	<%=f.button :submit %>
<% end %>